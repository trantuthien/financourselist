{{!
    @template local_financourselist/statistics

    Statistics section template.

    Context variables required for this template:
    * stats - Statistics data object containing:
        * totalcourses - Total number of courses
        * totalstudents - Total number of students
        * completionrate - Average completion rate
        * averagerating - Average course rating
    * strings - Language strings
}}

<div class="local-financourselist-stats-section">
    <div class="local-financourselist-stats-grid">
        <div>
            <div class="local-financourselist-stat-number">{{stats.totalcourses}}</div>
            <div class="local-financourselist-stat-label">{{strings.totalcourses}}</div>
        </div>
        <div>
            <div class="local-financourselist-stat-number">{{stats.totalstudents}}</div>
            <div class="local-financourselist-stat-label">{{strings.totalstudents}}</div>
        </div>
        <div>
            <div class="local-financourselist-stat-number">{{stats.completionrate}}%</div>
            <div class="local-financourselist-stat-label">{{strings.completionrate}}</div>
        </div>
        <div>
            <div class="local-financourselist-stat-number">{{stats.averagerating}}</div>
            <div class="local-financourselist-stat-label">{{strings.averagerating}}</div>
        </div>
    </div>
</div>