{{!
    @template local_financourselist/empty_state

    Empty state template when no courses are found.

    Context variables required for this template:
    * emptytitle - Title for empty state
    * emptymessage - Message for empty state
}}

<div class="local-financourselist-empty">
    <i class="fas fa-search fa-3x text-muted mb-3"></i>
    <h4 class="text-muted">{{emptytitle}}</h4>
    <p class="text-muted">{{emptymessage}}</p>
</div>