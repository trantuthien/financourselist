{{!
    @template local_financourselist/course_grid

    Course grid template.

    Context variables required for this template:
    * courses - Array of course objects
    * strings - Language strings
}}

<div class="local-financourselist-courses-grid">
    {{#courses}}
    <div class="local-financourselist-course-card" role="article" aria-labelledby="course-title-{{id}}">
        <div class="local-financourselist-course-image {{categoryclass}}">
            {{#hasimage}}
                <img src="{{courseimage}}" alt="{{title}}" loading="lazy">
            {{/hasimage}}
            {{^hasimage}}
                <i class="{{icon}} local-financourselist-course-icon" aria-hidden="true"></i>
            {{/hasimage}}
            <div class="local-financourselist-course-category" 
                 aria-label="{{strings.category}}: {{categoryname}}">
                {{categoryname}}
            </div>
        </div>
        <div class="local-financourselist-course-content">
            <h3 id="course-title-{{id}}" class="local-financourselist-course-title">{{title}}</h3>
            <p class="local-financourselist-course-description">{{description}}</p>
            <div class="local-financourselist-course-bottom">
                <div class="local-financourselist-course-meta">
                    <div class="local-financourselist-course-stats" 
                         role="group" 
                         aria-label="{{strings.coursestatistics}}">
                        <span aria-label="{{strings.enrolledstudents}}: {{students}}">
                            <i class="fas fa-users" aria-hidden="true"></i> {{students}}
                        </span>
                        <span aria-label="{{activities}} {{strings.activities}}">
                            <i class="fas fa-book" aria-hidden="true"></i> {{activities}} {{strings.activities}}
                        </span>
                    </div>
                </div>
                <a href="{{url}}" class="local-financourselist-btn-finan" 
                   aria-label="{{strings.joincourse}}: {{title}}">
                    <i class="fas fa-play me-1" aria-hidden="true"></i> {{jointext}}
                </a>
            </div>
        </div>
    </div>
    {{/courses}}
</div>