{{!
    @template local_financourselist/filters

    Filters section template.

    Context variables required for this template:
    * search - Current search term
    * searchplaceholder - Search placeholder text
    * categories - Array of category filter options
}}

<div class="local-financourselist-filters" role="search" aria-label="{{searchplaceholder}}">
    <form method="get" action="">
        <div class="local-financourselist-search">
            <label for="course-search" class="local-financourselist-sr-only">{{searchplaceholder}}</label>
            <input type="text" id="course-search" name="search" value="{{search}}" 
                   placeholder="{{searchplaceholder}}"
                   onchange="this.form.submit()" 
                   aria-describedby="search-help">
            <i class="fas fa-search local-financourselist-search-icon" aria-hidden="true"></i>
            <div id="search-help" class="local-financourselist-sr-only">{{searchplaceholder}}</div>
        </div>
        
        <div class="local-financourselist-category-filters">
            {{#categories}}
            <a href="{{{url}}}" 
               class="local-financourselist-category-filter {{#active}}active{{/active}}">
                {{name}}
            </a>
            {{/categories}}
        </div>
    </form>
</div>